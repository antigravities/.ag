#!/bin/bash
alias cp='cp -r'
alias ls='ls --color'
PS1="[\u@\h \w] $ "

function u(){
	curl https://raw.githubusercontent.com/antigravities/.ag/master/.ag > ~/.ag
	cd
	source .ag
}

function .ag(){
	if ! [ -d "~/ag" ]; then
		git clone "git@github.com:antigravities/.ag.git" ~/ag
	fi

	cd ~/ag
	cp ~/.ag .
	git commit -a --allow-empty-message -m ''
	git push
}

alias refresh="source ~/.ag"
